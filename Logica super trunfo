#include <stdio.h>

int main() {
    // ======= Dados das cartas =======
    char nomePais1[50] = "Bahia";
    char nomePais2[50] = "Acre";
    int populacao1 = 14870907, populacao2 = 884372;
    float area1 = 564760.42, area2 = 1641230.73;
    float pib1 = 402.6, pib2 = 23.0; // PIB em bilhões de reais
    int pontosTuristicos1 = 22, pontosTuristicos2 = 25;
    float densidade1 = populacao1 / area1;
    float densidade2 = populacao2 / area2;

    int opcao1, opcao2;
    float valor1_c1, valor1_c2, valor2_c1, valor2_c2; // valores dos atributos escolhidos
    float soma1, soma2; // soma dos dois atributos
    char atributo1[30], atributo2[30];

    // ======= Menu de escolha do primeiro atributo =======
    printf("===== SUPER TRUNFO FINAL =====\n\n");
    printf("Carta 1: %s\n", nomePais1);
    printf("Carta 2: %s\n\n", nomePais2);

    printf("Escolha o PRIMEIRO atributo para comparar:\n");
    printf("1 - População\n");
    printf("2 - Área\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Turísticos\n");
    printf("5 - Densidade Demográfica\n");
    printf("Digite sua opção: ");
    scanf("%d", &opcao1);

    // ======= Validação da primeira escolha =======
    if (opcao1 < 1 || opcao1 > 5) {
        printf("Opção inválida! Encerrando o programa.\n");
        return 0;
    }

    // ======= Menu dinâmico: remover a opção já escolhida =======
    printf("\nEscolha o SEGUNDO atributo (diferente do primeiro):\n");
    for (int i = 1; i <= 5; i++) {
        if (i == opcao1) continue; // pula o atributo já escolhido
        switch (i) {
            case 1: printf("1 - População\n"); break;
            case 2: printf("2 - Área\n"); break;
            case 3: printf("3 - PIB\n"); break;
            case 4: printf("4 - Pontos Turísticos\n"); break;
            case 5: printf("5 - Densidade Demográfica\n"); break;
        }
    }
    printf("Digite sua opção: ");
    scanf("%d", &opcao2);

    // ======= Garantir que o segundo atributo é diferente =======
    if (opcao2 == opcao1 || opcao2 < 1 || opcao2 > 5) {
        printf("Opção inválida! Os dois atributos devem ser diferentes.\n");
        return 0;
    }

    printf("\n===== RESULTADOS =====\n\n");

    // ======= Função de comparação via switch =======
    // Primeiro atributo
    switch (opcao1) {
        case 1:
            valor1_c1 = populacao1; valor1_c2 = populacao2;
            sprintf(atributo1, "População");
            break;
        case 2:
            valor1_c1 = area1; valor1_c2 = area2;
            sprintf(atributo1, "Área");
            break;
        case 3:
            valor1_c1 = pib1; valor1_c2 = pib2;
            sprintf(atributo1, "PIB");
            break;
        case 4:
            valor1_c1 = pontosTuristicos1; valor1_c2 = pontosTuristicos2;
            sprintf(atributo1, "Pontos Turísticos");
            break;
        case 5:
            valor1_c1 = densidade1; valor1_c2 = densidade2;
            sprintf(atributo1, "Densidade Demográfica");
            break;
    }

    // Segundo atributo
    switch (opcao2) {
        case 1:
            valor2_c1 = populacao1; valor2_c2 = populacao2;
            sprintf(atributo2, "População");
            break;
        case 2:
            valor2_c1 = area1; valor2_c2 = area2;
            sprintf(atributo2, "Área");
            break;
        case 3:
            valor2_c1 = pib1; valor2_c2 = pib2;
            sprintf(atributo2, "PIB");
            break;
        case 4:
            valor2_c1 = pontosTuristicos1; valor2_c2 = pontosTuristicos2;
            sprintf(atributo2, "Pontos Turísticos");
            break;
        case 5:
            valor2_c1 = densidade1; valor2_c2 = densidade2;
            sprintf(atributo2, "Densidade Demográfica");
            break;
    }

    // ======= Exibir os dois atributos escolhidos =======
    printf("Atributos escolhidos: %s e %s\n\n", atributo1, atributo2);

    // ======= Comparação individual (usando operador ternário) =======
    printf("Comparando %s:\n", atributo1);
    printf("%s: %.2f\n", nomePais1, valor1_c1);
    printf("%s: %.2f\n", nomePais2, valor1_c2);
    (opcao1 == 5)
        ? printf("Vencedor (menor densidade): %s\n\n",
                  (valor1_c1 < valor1_c2) ? nomePais1 : (valor1_c2 < valor1_c1) ? nomePais2 : "Empate")
        : printf("Vencedor: %s\n\n",
                  (valor1_c1 > valor1_c2) ? nomePais1 : (valor1_c2 > valor1_c1) ? nomePais2 : "Empate");

    printf("Comparando %s:\n", atributo2);
    printf("%s: %.2f\n", nomePais1, valor2_c1);
    printf("%s: %.2f\n", nomePais2, valor2_c2);
    (opcao2 == 5)
        ? printf("Vencedor (menor densidade): %s\n\n",
                  (valor2_c1 < valor2_c2) ? nomePais1 : (valor2_c2 < valor2_c1) ? nomePais2 : "Empate")
        : printf("Vencedor: %s\n\n",
                  (valor2_c1 > valor2_c2) ? nomePais1 : (valor2_c2 > valor2_c1) ? nomePais2 : "Empate");

    // ======= Soma dos atributos =======
    soma1 = valor1_c1 + valor2_c1;
    soma2 = valor1_c2 + valor2_c2;

    printf("Soma total dos atributos:\n");
    printf("%s: %.2f\n", nomePais1, soma1);
    printf("%s: %.2f\n", nomePais2, soma2);

    // ======= Resultado final =======
    if (soma1 > soma2)
        printf("\nResultado final: %s venceu a rodada!\n", nomePais1);
    else if (soma2 > soma1)
        printf("\nResultado final: %s venceu a rodada!\n", nomePais2);
    else
        printf("\nResultado final: Empate!\n");

    printf("\n===== FIM DO JOGO =====\n");
    return 0;
}
